datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  kti       Int
  bi        Int
  ipk       Float
  prestasi  Int
  po        Int
  beasiswa  Int
  profile   Profile?
}

model Profile {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  score     Float
  user      User     @relation(fields: [userId], references: [id])
}
